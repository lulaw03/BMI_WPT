<Window x:Class="WPF419.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF419"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <TextBlock FontSize="25" TextAlignment="Center">你滿十八歲了嗎？</TextBlock >
              
        <StackPanel Orientation="Horizontal">
            <Button Foreground="Red" FontSize="10" Padding="10 5" Margin="80 5 80 5">Yes</Button>
            <Button Foreground="Black" FontSize="10" Padding="10 5" Margin="200 5 80 5">No</Button>
         
        </StackPanel>
        <TextBlock Foreground="Black" FontSize="25" Margin="0 5">BMI</TextBlock >
        <TextBox Foreground="Black" FontSize="15" Padding="10 5">身高:</TextBox>
        <TextBox Foreground="Black" FontSize="15" Padding="10 5">體重:</TextBox>
        <Button  Foreground="Black" FontSize="15" Padding="10 5" Margin="200 5" Click="Button_Click_1">計算</Button >
        <TextBlock Foreground="Red" FontSize="25" TextAlignment="Left" >數值為:</TextBlock >
    </StackPanel>
    
    
    
   
    
</Window>
